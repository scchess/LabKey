###*
 * Assert that the element contains the html specified
 *
 * h3 Examples:
 *
 *     browser
 *         .url("http://www.google.com")
 *         .assert.htmlMatch(/\.com$/)
 *
 *     browser
 *         .url("http://www.google.com")
 *         .assert.elementHtmlMatch(new RegExp("\.com$", "i")
 *
 * @author maxgalbu
 * @param {RegExp} regex - regular expression
 * @param {String} [msg] - output to identify the assertion
###

util = require('util');

exports.assertion = (regex, msg) ->
	this.message = msg || util.format('Testing if the URL match the regex "%s".', regex);
	this.expected = regex;
	
	this.pass = (value) ->
		return this.expected.test(value);

	this.value = (result) ->
		return result.value;
	
	this.command = (callback) ->
		return this.api.url(callback);
	
	return;