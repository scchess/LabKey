<!-- This query metadata defines the grantDescription column, which concatenates grant id and title, as the title field. This makes grantDescription appear as the text in pulldown menus that reference the active_grants query -->

<query xmlns="http://labkey.org/data/xml/query">
<metadata>
<tables xmlns="http://labkey.org/data/xml">
  <table tableName="active_grants" tableDbType="NOT_IN_DB">
  <titleColumn>grantDescription</titleColumn>
    <columns>
      <column columnName="id">
        <isKeyField>true</isKeyField>
      </column>
    </columns>
  </table>
</tables>
</metadata>
</query>